<h1 class="center">My Listings</h1>

<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Image</th>
    <th class="center">Title</th>
    <th class="center">Description</th>
    <th class="center">Price</th>
    <th class="center">Action</th>
  </tr>

  <% @listings.each do |listing| %>
    <tr>
      <td class="center"><%= link_to image_tag(listing.image.url(:thumb)), listing %></td>
      <td class="center"><%= listing.title %></td>
      <td class="center"><%= listing.description %></td>
      <td class="center"><%= number_to_currency(listing.price) %></td>
      <td class="center">
        <div class="btn-group">
          <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false">Action <span class="caret"></span></button>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to 'Show', listing %></li>
            <li><%= link_to 'Edit', edit_listing_path(listing) %></li>
            <li><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></li>
          </ul>
        </div>
      </td>
    </tr>
  <% end %>
</table>

<br>
<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
<% end %>

