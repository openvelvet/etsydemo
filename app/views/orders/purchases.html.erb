<h1 class="center">My Purchase History</h1>

<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Image</th>
    <th class="center">Item</th>
    <th class="center">Price</th>
    <th class="center">Seller</th>
    <th class="center">Date Purchased</th>
  </tr>

  <% @orders.each do |order| %>
    <tr>
      <td class="center"><%= link_to image_tag(order.listing.image.url(:thumb)), @listing %></td>
      <td class="center"><%= link_to order.listing.title, @listing %></td>
      <td class="center"><%= number_to_currency(order.listing.price) %></td>
      <td class="center"><%= order.seller.name %></td>
      <td class="center"><%= order.created_at.strftime(" %m/%d/%Y") %></td>
    </tr>
  <% end %>
</table>

